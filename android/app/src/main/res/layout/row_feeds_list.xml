<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="7dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txttitle"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/post_title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="@dimen/post_time"
                android:id="@+id/txtdate" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgbookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/btn_bookmark_unfilled" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:id="@+id/txtpostdescription"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:autoLink="web"
        android:textColor="@color/bodytextcolor"
        android:textSize="@dimen/post_desc"
        android:paddingTop="7dp"
       />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:id="@+id/webview"
        tools:ignore="WebViewLayout"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/button_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:textSize="@dimen/post_desc"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="@dimen/post_desc_left_right_padding"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:text="@string/toggle_expand" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/default_post_image"
        android:id="@+id/post_image" />


    <com.google.android.youtube.player.YouTubeThumbnailView
        android:id="@+id/youtube_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout_over_youtube_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@android:color/transparent"
        android:visibility="gone">


        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/btnYoutube_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/play_button" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingBottom="4dp"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:id="@+id/imglike"
            android:layout_gravity="center"
            android:padding="3dp"
            android:src="@drawable/btn_like_unfilled" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="0"
            android:layout_marginRight="10dp"
            android:id="@+id/txtlike_count" />


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/btn_comment_unfilled"
            android:id="@+id/imgcomments" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/txtcommentscount" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:id="@+id/imgshare"
            android:padding="3dp"
            android:src="@drawable/btn_share" />

        <ImageView
            android:id="@+id/imgbookmark1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="3dp"
            android:src="@drawable/btn_bookmark_unfilled"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/divider_color" />

</LinearLayout>