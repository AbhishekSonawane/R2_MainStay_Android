    <EditText
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/username_field"
        android:backgroundTint="#9B9B9B"
        android:drawableLeft="@drawable/icon_email_new"
        android:drawablePadding="10dp"
        android:hint="@string/username_hint"
        android:imeOptions="actionUnspecified"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="11dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="#9B9B9B"
        android:textSize="16dp"
        android:textStyle="bold" />

    <!--    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11dp"
            android:paddingRight="11dp"
            android:paddingLeft="3dp"
            android:textColor="@color/placeholdercolor"
            android:text="@string/password_label"
            android:textSize="16dp" />-->

    <EditText
        android:id="@+id/txtpassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/username_field"
        android:backgroundTint="#9B9B9B"
        android:drawableLeft="@drawable/icon_password_new"
        android:drawablePadding="10dp"
        android:hint="@string/password_hint"
        android:imeActionLabel=""
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:paddingRight="11dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="#9B9B9B"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="11dp"
        android:gravity="right"
        android:paddingRight="11dp"
        android:id="@+id/txtforgotpassword"
        android:text="@string/lbl_forgot_password"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_new_signin"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/txttandc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="11dp"
        android:textColor="@android:color/black"
        android:textSize="12dp" />


</LinearLayout>
